{
    "name": "root",
    "private": true,
    "npmClient": "yarn",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "clean": "lerna clean",
        "lint": "tslint packages/**/src/*.ts* packages/**/tests/*.ts*",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^24.0.9",
        "jest": "^24.1.0",
        "lerna": "^3.13.1",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.3333"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": false
            }
        }
    }
}
