{
    "name": "root",
    "private": true,
    "npmClient": "yarn",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "clean": "lerna clean --yes && rimraf packages/**/lib",
        "lint": "tslint packages/**/src/*.ts* packages/**/tests/*.ts*",
        "test": "jest"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.11",
        "@types/enzyme": "3.9.1",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.11",
        "@types/jsdom": "^12.2.2",
        "@types/react": "^16.8.8",
        "@types/react-dom": "^16.8.3",
        "cheerio": "^0.22.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.11.2",
        "jest": "^24.5.0",
        "jsdom": "^14.0.0",
        "lerna": "^3.13.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-test-renderer": "^16.8.4",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.14.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.4000"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": false
            }
        }
    }
}
