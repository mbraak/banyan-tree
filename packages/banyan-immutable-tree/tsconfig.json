{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "outDir": "lib"
    },
    "exclude": [
        "node_modules"
    ]
}
